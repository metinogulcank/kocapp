# Production Environment Variables
# Bu dosya server klasörüne .env.production olarak kaydedilmeli

# Server Configuration
NODE_ENV=production
PORT=5000

# Database Configuration (MongoDB Atlas veya hosting sağlayıcınızın MongoDB'si)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/kocapp?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-for-production-min-32-characters
JWT_EXPIRE=7d

# Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# CORS Configuration
CORS_ORIGIN=https://kocapp.com

# Security
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
